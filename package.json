{
  "name": "ere.io",
  "version": "0.0.1",
  "description": "personal website",
  "main": "index.js",
  "repository": "https://github.com/ereio/ere.io",
  "author": "ereio",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-prerender",
    "build:dist": "./scripts/bundle-dist.sh",
    "serve": "preact build && serve build --single",
    "old:aws:deploy": "./scripts/bundle-dist.sh && aws s3 sync ./dist/ s3://ere.io --delete",
    "deploy": "yarn build:dist && netlify deploy --dir=./dist/",
    "deploy:prod": "yarn build:dist && netlify deploy --prod --dir=./dist/",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "postbuild": "react-snap"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "normalize.css": "^8.0.1",
    "preact": "^10.0.1",
    "preact-compat": "^3.19.0",
    "preact-render-to-string": "^5.1.0",
    "preact-router": "^3.0.0",
    "react-markdown": "^4.2.2"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-synacor": "^3.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-spy": "^1.2.1",
    "react-snap": "^1.23.0",
    "serve": "^11.1.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "reactSnap": {
    "inlineCss": true,
    "source": "build",
    "destination": "build",
    "removeScriptTags": true
  }
}
